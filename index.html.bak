        }

        try {
          const eventRef = doc(db, "events", eventId);

          await runTransaction(
            db,
            async (transaction) => {
              const eventDoc = await transaction.get(eventRef);
              if (!eventDoc.exists()) {
                throw new Error("이벤트를 찾을 수 없습니다.");
              }

              const eventData = eventDoc.data();

