                const applicants = [...(eventData.applicants || [])].filter(
                  (a) => a.studentId !== studentId
                );
                const waiting = [...(eventData.waiting || [])].filter(
                  (w) => w.studentId !== studentId
                );

                transaction.update(eventRef, { applicants, waiting });
              }
            },
