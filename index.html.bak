            showAlert("✅", `"${position}" 직책이 회장단에 추가되었습니다.`);
          } else {
            const newPositions = [...regularPositions, position];
            debugLog("💾 일반 임원 직책 저장 시도:", newPositions);
            await setDoc(doc(db, "settings", "regularPositions"), {
              positions: newPositions,
