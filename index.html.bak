        const today = new Date();
        today.setHours(0, 0, 0, 0);

        // order → 날짜 순 (기본적인 데이터 검증만)
        const validRoadmapData = (roadmapData || []).filter((item) => {
          if (!item || typeof item !== "object" || !item.id) return false;

