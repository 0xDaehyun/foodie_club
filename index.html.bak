        const inputId =
          category === "president"
            ? "new-president-position"
            : "new-regular-position";
        const input = document.getElementById(inputId);
        const position = input.value.trim();

        if (!position) {
          showAlert("😥", "직책명을 입력하세요.");
          return;
        }

        // 중복 체크
