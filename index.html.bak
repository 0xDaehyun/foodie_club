          const maxGroupIdx = sizes.indexOf(maxSize);
          const minGroupIdx = sizes.indexOf(minSize);

          const maxGroup = groups[maxGroupIdx];
          const memberToMove = maxGroup
            .slice()
            .reverse()
            .find((m) => !m.isLeader);

          if (memberToMove) {
