                    : ""
                }
                <div class="calendar-month-year">${year}년 ${
          monthNames[month]
        }</div>
                ${
                  isLoggedIn
                    ? `
                <button class="calendar-nav-btn calendar-nav-next" onclick="changeCalendarMonth(1)">
                  <i class="fas fa-chevron-right"></i>
