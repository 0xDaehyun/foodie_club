      // 성별 균형 배분 (조장 포함) - 개선된 알고리즘
      function balanceGroupsByGenderWithLeaders(
        participants,
        groups,
        groupCount,
        manualLeaders
      ) {
        console.log(
          "🔄 성별 균형 배분 시작",
          participants.length,
