      /* ===== 비상 관리자 임명 ===== */
      async function addEmergencyAdmin() {
        const sid = document.getElementById("new-admin-id").value.trim();
        if (!sid) return showAlert("😥", "학번을 입력하세요.");
        try {
          await runTransaction(
            db,
            async (tx) => {
              const ref = doc(db, "admins", "list");
              const snap = await tx.get(ref);
              const arr = snap.exists() ? snap.data().studentIds || [] : [];
              if (!arr.includes(sid)) arr.push(sid);
              tx.set(ref, { studentIds: arr }, { merge: true });
            },
            TRANSACTION_OPTIONS
          );
          closeEmergencyModal();
          showAlert("✅", `관리자에 ${saf(sid)}를(을) 추가했습니다.`);
        } catch (e) {
          console.warn(e);
          if (e?.code === "resource-exhausted")
            showAlert(
              "😥",
              "요청이 너무 많아 잠시 후 다시 시도해주세요.<br>불편을 드려 죄송합니다."
            );
          else showAlert("😥", "관리자 임명 중 오류가 발생했습니다.");
        }
      }

      /* ===== 전역: 에디터 모달 밖 클릭 시 닫힘 방지(명시 버튼만) ===== */
      // 이미 각 사용처에서 cancel과 save 핸들러를 지정함

      // 로딩 진행률 관리
      let loadingProgress = 0;
      const totalLoadingSteps = 2; // 총 로딩 단계 수 (간소화)

      // 신버전 로딩 화면: CSS 애니메이션만 사용
      let loadingAnimationComplete = false;

      // 로딩 애니메이션 시작 (신버전: 단순히 애니메이션만 시작)
      function startLoadingAnimation() {
        loadingAnimationComplete = false;
        // 신버전 로딩 화면은 CSS 애니메이션만 사용하므로 별도 처리 불필요
      }

      // 로딩 애니메이션 종료
      function stopLoadingAnimation() {
        loadingAnimationComplete = true;
      }

      function updateLoadingProgress(step, text) {
        // 신버전 로딩 화면은 CSS 애니메이션만 사용하므로 진행률 업데이트 불필요
        // step이 2면 완료로 간주
        if (step === 2 || step >= 100) {
          loadingProgress = 100;
          setTimeout(() => {
            stopLoadingAnimation();
          }, 500);
        } else {
          loadingProgress = Math.min(90, step * 30);
        }

        debugLog(`로딩 진행률: ${loadingProgress}% - ${text || ""}`);
      }

      // 로딩 화면 숨기기 함수
      function hideLoadingScreen() {
        const loadingScreen = document.getElementById("loading-screen");
        if (loadingScreen && loadingAnimationComplete) {
          debugLog("✅ 로딩 화면 숨김 (모든 데이터 소스 응답 완료)");
          // 강제로 숨기기
          loadingScreen.style.display = "none";
          loadingScreen.style.visibility = "hidden";
          loadingScreen.style.opacity = "0";
          loadingScreen.style.pointerEvents = "none";
          loadingScreen.style.zIndex = "-1";
          loadingScreen.classList.add("hidden");
        } else if (loadingScreen) {
          // 애니메이션 완료를 기다리지 않고 강제로 숨기기
          debugLog("✅ 로딩 화면 강제 숨김");
          loadingScreen.style.display = "none";
          loadingScreen.style.visibility = "hidden";
          loadingScreen.style.opacity = "0";
          loadingScreen.style.pointerEvents = "none";
          loadingScreen.style.zIndex = "-1";
          loadingScreen.classList.add("hidden");
        }
      }

