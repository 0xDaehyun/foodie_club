        container.classList.add("content-loading", "smooth-transition");

        // 2. requestAnimationFrame을 사용하여 부드러운 전환
        requestAnimationFrame(() => {
          // 3. 새로운 콘텐츠 렌더링
          renderFunction();

          // 4. 짧은 지연 후 로딩 상태 해제
          setTimeout(() => {
            container.classList.remove("content-loading");
            container.classList.add("content-loaded");

            // 5. 전환 완료 후 클래스 정리
            setTimeout(() => {
