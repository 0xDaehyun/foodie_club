            );
          else showAlert("😥", "신청 실패");
        } finally {
          // 처리 완료 시 전역 변수에서 제거
          processingRequests.delete(requestKey);

          // 버튼 상태 복원
          if (button) {
            button.disabled = false;
            button.innerHTML = originalText;
          }
        }
