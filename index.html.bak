        const endDate = new Date(lastDay);
        endDate.setDate(endDate.getDate() + (6 - lastDay.getDay()));

        const today = new Date();
        today.setHours(0, 0, 0, 0);

        const weekDays = ["일", "월", "화", "수", "목", "금", "토"];
        const monthNames = [
          "1월",
          "2월",
          "3월",
          "4월",
          "5월",
          "6월",
          "7월",
